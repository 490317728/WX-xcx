page{
    width:100%;
    height:100%;
    display: flex;
    flex-direction: column;
}
.wrap{
    width:100%;
    flex: 1;
    overflow: auto;
}
.top{
    display: block;
    height:80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 36rpx;
}
.banner{
    width:100%;
    height:700rpx;
}
.headerList{
    width:100%;
    height:700rpx;
}
.headerList image{
    width:100%;
    height:100%;
}

.jieshao{
    width:96%;
    height:160rpx;
    margin:0 auto;
    display: flex;
    justify-content: space-between;
    border-bottom: 2rpx solid #ccc;
}
.jieshao view{
    height:160rpx;
}
.jieshao view:nth-of-type(1){
    flex: 1;
    height:160rpx;
}
.jieshao view:nth-of-type(1) text{
    display: block;
    width:100%;
    height:80rpx;
    line-height:80rpx;
    color:#f44;
    font-weight: 900;
}
.jieshao>view:nth-of-type(1) text:nth-of-type(1){
    line-height: 110rpx;
    color:#333;
    font-weight: 100;
    font-size: 36rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal !important;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.jieshao view:nth-of-type(2){
    width:60rpx;
    height:160rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
}
.jieshao>view:nth-of-type(2) image{
    width:50rpx;
    height:50rpx;
    margin-right:5rpx;  
}
.jieshao>view:nth-of-type(2) text{
    display: block;
    width:60rpx;
    height:50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 28rpx;
    color: #999;
}
.msg{
    width:96%;
    height:auto;
    margin:0 auto;
}
.msg>view{
    width:100%;
    display: flex;
}
.cuxiao{
    height:200rpx;
}
.cu_right{
    flex: 1;
    height:200rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.cu_right>view{
    flex: 1;
    width:100%;
    display: flex;
    justify-content: space-between;
}
.cu_right>view view{
    flex: 1;
    width:100%;
    line-height: 100rpx;
    font-size: 32rpx;
    display: flex;
    justify-content: center;
    align-content: center;
}
.tit{
    display: inline-block;
    width:80rpx;
    height:50rpx;
    line-height: 50rpx;
    margin-top:25rpx;
    text-align: center;
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal !important;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.textmsg{
    flex: 1;
    height:100rpx;
    text-indent: 15rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal !important;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.cu_right>view image{
    width:60rpx;
    height:60rpx;
    margin:20rpx 10rpx 0 0;
}

.text{
    height:100rpx;
    width:100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 30rpx;
    color:#ccc;
}
.text_con{
    flex: 1;
    height:100rpx;
    line-height:100rpx;
    font-size: 32rpx;
}
.count{
    flex: 1;
    height:100rpx;
    line-height: 100rpx;
    display: flex;
    align-items: center;
}
.count>button{
    width:60rpx;
    height:50rpx;
    margin:0;
    padding: 0;
    color:#333;
    line-height:50rpx;
    text-align: center;
}
.count>text{
    width:80rpx;
    height:50rpx;
    line-height: 50rpx;
    text-align: center;
}
.footer{
    width:100%;
    height:130rpx;
    background: #f5f5f5;
    border-top:2rpx solid #ccc;
    display: flex;
}
.footer>view:nth-of-type(1),.footer>view:nth-of-type(2){
    flex: 1;
    height:130rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.footer>view:nth-of-type(1) image,.footer>view:nth-of-type(2) image{
    margin-top:10rpx;
    width:55rpx;
    height:55rpx;
}
.footer>view:nth-of-type(1) text,.footer>view:nth-of-type(2) text{
    font-size:28rpx;
    display: block;
    width:60rpx;
    height:50rpx;
    margin-top:15rpx;
}
.footer>view:nth-of-type(3){
    width:200rpx;
    height:98rpx;
    margin: 15rpx 0 0 10rpx;
    border: 1rpx solid #89be48;
    border-radius: 7%;
}
.footer>view:nth-of-type(3) image{
    float: left;
    width:50rpx;
    height:50rpx;
    margin:24rpx 20rpx 25rpx 40rpx ;
}
.footer>view:nth-of-type(3) text{
    float: left;
    width:50rpx;
    height:50rpx;
    line-height:60rpx;
    margin-top:19rpx;
    text-align: center;
}
.footer>button{
    width:260rpx;
    height:100rpx;
    line-height: 100rpx;
    background-color: #89be48;
    margin:15rpx 20rpx 0;
    font-size: 34rpx;
    color:#fff;
    font-weight: 900;
}







